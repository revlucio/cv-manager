@{
    ViewBag.Title = "Cv";
    Layout = null;
}
@model CvManager.Model.Cv

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>@Model.FullName</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div id="main">
        <h1 id="title">@Model.FullName</h1>
        <div class="basic-info section">
            <div class="set">
                <p>
                    E-mail: @Model.Email <span class="dot">§</span>
                    Website: @Model.Website <span class="dot">§</span>
                    Phone: @Model.PhoneNumber
                </p>
                <p>
                    @Model.Address
                </p>
                <div class="clear">
                </div>
            </div>
            <!-- set //-->
            <div class="clear">
            </div>
        </div>
        <!-- basic-info //-->
        <div class="section section-education">
            <h2 class="title">Education</h2>
            <div class="set">
                @for (var i = 0; i < Model.Educations.Count; i++)
                {
                    @Html.DisplayFor(m => m.Educations[i])
                }
            </div>
        </div>
        <div class="section section-work">
            <h2 class="title">Work experience</h2>
            <div class="set">
                @for (var i = 0; i < Model.WorkExperiences.Count; i++)
                {
                    @Html.DisplayFor(m => m.WorkExperiences[i])
                }
            </div>
            <div class="clear">
            </div>
        </div>
        <div class="section section-interests">
            <h2 class="title">Field Work and Practical Experience</h2>
            <div class="set">
                <div class="item">
                    <span class="info">
                        @Html.Raw(Model.Fieldwork)
                    </span>
                </div>
            </div>
            <div class="clear">
            </div>
        </div>
        <div class="section section-1392497042317">
            <h2 class="title">Committees and Achievements</h2>
            <div class="set">
                <div class="item">
                    <span class="info">
                        <ul>
                            @for (var i = 0; i < Model.Achievements.Count; i++)
                            {
                                @Html.DisplayFor(m => m.Achievements[i])
                            }
                        </ul>
                        <br><br>
                    </span>
                </div>
            </div>
            <div class="clear">
            </div>
        </div>
        <div class="section section-1392497124818">
            <h2 class="title">Conferences</h2>
            <div class="set">
                <div class="item">
                    <span class="info">
                        <ul>
                            @for (var i = 0; i < Model.Conferences.Count; i++)
                            {
                                @Html.DisplayFor(m => m.Conferences[i])
                            }
                        </ul>
                        <br><br>
                    </span>
                </div>
            </div>
            <div class="clear">
            </div>
        </div>
        <div class="section section-1394453370588">
            <h2 class="title">Aquired skills</h2>
            <div class="set">
                <div class="item">
                    <span class="info">
                        @Html.Raw(Model.Skills)
                    </span>
                </div>
            </div>
            <div class="clear">
            </div>
        </div>
        <div class="section section-references">
            <h2 class="title">References</h2>
            <div class="set">
                <div class="item">
                    <span class="info">
                        @for (var i = 0; i < Model.References.Count; i++)
                        {
                            @Html.DisplayFor(m => m.References[i])
                        }
                    </span>
                </div>
            </div>
            <div class="clear">
            </div>
        </div>
    </div>
</body>
</html>

